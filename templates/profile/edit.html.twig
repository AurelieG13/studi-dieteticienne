{% extends 'base.html.twig' %}

{% block title %}Page de Profil - Informations{% endblock %}

{% block body %}
<div class="container-fluid overflow-hidden">
    <div class="row vh-100 overflow-auto">
        {% include "_components/_sidebar.html.twig" %}
        <div class="col d-flex flex-column h-sm-100">
            <main class="row overflow-auto">
                <div class="col pt-4">
                    <h3 class="text-center">Modification de vos informations personnelles</h3>
                    <a href="{{ path('profile_home') }}" type="button" class="btn btn-custom my-3">Retour</a>
                    {{ form_start(form)}}
                        {{ form_row(form.name)}}
                        {{ form_row(form.firstname)}}
                        <button class="btn btn-custom">Modifier</button>
                    {{ form_end(form)}}
                </div>
            </main>
        </div>
    </div>
</div>


{% endblock %}
