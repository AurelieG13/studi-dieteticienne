{% extends 'base.html.twig' %}

{% block title %}Administration - Recettes{% endblock %}

{% block body %}

    <div class="mb-4">
        <a type="button" class="btn btn-custom" href="{{ path('admin_home') }}"><img src="{{ asset('assets/images/arrow-left-circle.svg') }}" alt=""> panneau d'administration</a>
    </div>

    <h1>Liste des recettes</h1>
    <div class="mb-4 mt-4">
        <a href="{{ path('admin_recipe_add') }}" type="button" class="btn btn-custom">
            Ajouter une recette
        </a>
    </div>

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>Titre</th>
            <th>Description</th>
            <th>prep</th>
            <th>repos</th>
            <th>cuisson</th>
            <th>ingrédients</th>
            <th>Etapes</th>
            <th>allergies</th>
            <th>regimes</th>
            <td colspan="2">Actions</td>
            
        </tr>
    </thead>
    <tbody>
            {% for recipe in recipes %}
        <tr class="text-center">
                <td>{{ recipe.title}}</td>
                <td>{{ recipe.description}}</td>
                <td>{{ recipe.prepareTime|date("H:i")}}</td>
                <td>{{ recipe.restTime|date("H:i")}}</td>
                <td>{{ recipe.cookingTime|date("H:i")}}</td>
                <td>
                    {% for ingredient in recipe.ingredients %}
                        <p>{{ ingredient.name }}</p>
                    {% else %}
                        <p>pas d'ingredient</p>
                    {% endfor %}
                </td>
                <td>
                    {% for step in recipe.steps %}
                        <p>{{ step.name }}</p>
                    {% else %}
                        <p>pas d'étape</p>
                    {% endfor %}
                </td>
                <td>
                    {% for allergy in recipe.allergies %}
                        <p>{{ allergy.name }}</p>
                    {% else %}
                        <p>pas d'allergie</p>
                    {% endfor %}
                </td>
                <td>
                    {% for diet in recipe.diet %}
                        <p>{{ diet.name }}</p>
                    {% else %}
                        <p>pas de régime particulier</p>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('admin_recipe_edit', {id: recipe.id}) }}" type="button" class="btn btn-success">
                        Modifier
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_recipe_delete', {id: recipe.id}) }}" type="button" class="btn btn-danger">
                        Supprimer
                    </a>
                </td>
            </tr>
            {% endfor %}
    </tbody>
</table>
{% endblock %}
