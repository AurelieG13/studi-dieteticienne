{% extends 'base.html.twig' %}

{% block title %}Administration - Etapes{% endblock %}

{% block body %}

    <div class="mb-4">
        <a type="button" class="btn btn-custom" href="{{ path('admin_home') }}"><img src="{{ asset('assets/images/arrow-left-circle.svg') }}" alt=""> panneau d'administration</a>
    </div>

    <h1>Liste des étapes</h1>
    <div class="mb-4 mt-4">
        <a href="{{ path('admin_step_add') }}" type="button" class="btn btn-custom">
            Ajouter une étape
        </a>
    </div>
            

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <td>Nom</td>
            <td>Description</td>
            <td colspan="2">Actions</td>
        </tr>
    </thead>
    <tbody>
    {% for step in steps %}
        <tr class="text-center">
            <td>{{ step.name }}</td>
            <td>{{ step.description }}</td>
            <td>
            <a href="{{ path('admin_step_edit', {id: step.id}) }}" type="button" class="btn btn-success">
                Modifier
            </a>
            </td>
            <td>
            <a href="{{ path('admin_step_delete', {id: step.id}) }}" type="button" class="btn btn-danger">
                Supprimer
            </a>
            </td>
        </tr>
    {% endfor %}
        
    </tbody>
</table>

{% endblock %}
