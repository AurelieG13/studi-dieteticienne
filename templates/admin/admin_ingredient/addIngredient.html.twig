{% extends 'base.html.twig' %}

{% block title %}Administration - Ingrédients - Ajouter{% endblock %}

{% block body %}
<main class="container">
<h1 class="text-center">Ajout d'un ingrédient</h1>
        <section>
                <a href="{{ path('admin_ingredient_list') }}" type="button" class="btn btn-custom my-3">Retour</a>
        </section>
        {{ form_start(form)}}

        {{ form_row(form.name) }}
        {{ form_row(form.quantity) }}
        <section>
                <button type="submit" class="btn btn-custom my-3">Ajouter</button>
        </section>
        {{ form_end(form)}}
</main>
{% endblock %}