{% extends 'base.html.twig' %}

{% block title %}Admin - Enregistrer un patient{% endblock %}

{% block body %}
    <main class="container">
        <h1 class="text-center">Enregistrer un nouveau patient</h1>

            <section>
                <a href="{{ path('admin_home') }}" type="button" class="btn btn-custom my-3">Retour</a>
            </section>
            {{ form_start(admin_register_form)}}
            {{ form_row(admin_register_form.name) }}
            {{ form_row(admin_register_form.firstname) }}
            {{ form_row(admin_register_form.email) }}
            {{ form_row(admin_register_form.plainPassword) }}
            {{ form_row(admin_register_form.allergies) }}
            {{ form_row(admin_register_form.diets) }}
            <section>
                    <button type="submit" class="btn btn-custom my-3">Ajouter</button>
            </section>
            {{ form_end(admin_register_form)}}
    </main>
{% endblock %}